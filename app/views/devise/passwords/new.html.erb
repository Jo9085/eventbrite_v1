
  <h1>Oublié ton mot de passe ?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class:"form-signin", method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field col-md-3">
      </br>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
    </div>

    <div class="actions">
    </br>
      <%= f.submit "Je veux réinitialiser mon mot de passe", class: 'btn btn-lg btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>


