<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Merci de te connecter au site</h2>

  <div class="field col-md-3">
    <%= f.label :email, "Adresse mail", class:"sr-only'" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field col-md-3">
    <%= f.label :password, 'Mot de passe', class:'sr-only' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :se_souvenir_de_moi %>
    </div>
  <% end %>

  <div class="actions">
  </br>
    <%= f.submit "Se connecter", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
